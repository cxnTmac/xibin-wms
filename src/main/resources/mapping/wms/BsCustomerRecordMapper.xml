    <select id="monthReport" resultType="Map"  parameterType="Map" >
        SELECT
        X1.SALE AS salePay,X1.RECEIVE AS receivePay,X1.DIS AS disPay,X1.RE AS rePay,X2.FREIGHT AS freightPay,
        B.current_balance AS balance,B.customer_name AS customer_name
        FROM
        (
        SELECT
        bsr.customer_code AS 'cusotomer_code',
        SUM(

        IF (
        bsr.type = 'S_SALE'
        OR bsr.type = 'X_SALE'
        ,
        bsr.pay,
        0
        )
        ) AS 'SALE',
        SUM(

        IF (
        bsr.type = 'RECEIVE',
        bsr.pay,
        0
        )
        ) AS 'RECEIVE',
        SUM(

        IF (
        bsr.type = 'PRICE_DIFFRENCT'
        OR bsr.type = 'ABSENCE_PAY'
        OR bsr.type = 'DISCOUNT',
        bsr.pay,
        0
        )
        ) AS 'DIS',
        SUM(

        IF (
        bsr.type = 'RETURN_INBOUND',
        bsr.pay,
        0
        )
        ) AS 'RE'
        FROM
        bs_customer_record bsr
        WHERE
        1=1
        <if test="dateFm!=null and dateFm!=''"> AND bsr.date &gt;= #{dateFm}</if>
        <if test="dateTo!=null and dateTo!=''"> AND bsr.date &lt; #{dateTo} </if>
        GROUP BY
        bsr.customer_code
        ) AS X1
        LEFT JOIN (
        SELECT
        woh.buyer_code AS 'buyer_code',
        SUM(

        IF (
        bsr.type = 'FREIGHT_PAID',
        bsr.pay,
        0
        )
        ) AS 'FREIGHT'
        FROM
        bs_customer_record bsr
        LEFT JOIN wm_outbound_header woh ON bsr.order_no = woh.order_no
        AND bsr.company_id = woh.company_id
        WHERE
        1=1
        <if test="dateFm!=null and dateFm!=''"> AND bsr.date &gt;= #{dateFm}</if>
        <if test="dateTo!=null and dateTo!=''"> AND bsr.date &lt; #{dateTo} </if>
        GROUP BY
        woh.buyer_code
        ) AS X2 ON X1.cusotomer_code = X2.buyer_code
        LEFT JOIN (
        SELECT
        bsr.customer_code AS B_customer_code,
        bc.customer_name AS customer_name,
        SUM(

        IF (
        bsr.type IN (
        'X_SALE',
        'S_SALE',
        'X_PURCHASE',
        'S_PURCHASE'
        ),
        pay ,- pay
        )
        ) + bc.balance AS current_balance
        FROM
        bs_customer_record bsr
        LEFT JOIN bd_customer bc ON bc.customer_code = bsr.customer_code
        WHERE
        1=1
        <if test="dateTo!=null and dateTo!=''"> AND bsr.date &lt; #{dateTo} </if>
        GROUP BY
        bsr.customer_code
        ) AS B ON X1.cusotomer_code = B.B_customer_code
        WHERE
        X1.SALE > 0
        OR X1.RECEIVE > 0
        OR X1.DIS > 0
        OR X1.RE > 0
        OR X2.FREIGHT > 0
        ORDER BY X1.SALE DESC
    </select>

    <select id="querySumPriceGroupByCustomerForAccount"   resultMap="SumPriceResultMap"   parameterType="Map" >
        SELECT
        sum(
        round(bcr.pay,2)
        )as total,
        bcr.customer_code,
        bcr.type,
        bc.customer_name,
        bc.auxi_id
        FROM
        bs_customer_record bcr
        LEFT JOIN bd_customer bc ON bc.company_id = bcr.company_id
        AND bc.customer_code = bcr.customer_code
        WHERE
        1 = 1
        <if test="orderNos!=null and orderNos.size()>0">
            AND bcr.order_no in
            <foreach item="item" index="index" collection="orderNos" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="type!=null and type!=''">
            AND bcr.type = #{type}
        </if>
        <if test="types!=null and types.size()>0">
            AND bcr.type in
            <foreach item="item" index="index" collection="types" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="timeFm!=null and timeFm!=''">
            AND bcr.date &gt;= #{timeFm}
        </if>
        <if test="timeTo!=null and timeTo!=''">
            AND bcr.date &lt;= #{timeTo}
        </if>
        <if test="noVoucherId == 1">
            AND (bcr.voucher_id = 0 OR bcr.voucher_id IS NULL)
        </if>
        AND bcr.company_id = #{companyId}
        GROUP BY
        bcr.customer_code
        <if test="isGroupByType==1">
            ,bcr.type
        </if>
    </select>
